{
  "name": "vite-based-react-starter",
  "private": false,
  "version": "0.3.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "lint": "eslint ./src --ext .js,jsx,ts,tsx --ignore-pattern dist",
    "lint:fix": "pnpm lint -- --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "preinstall": "npx only-allow pnpm"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/node": "^17.0.31",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint": "^8.18.0",
    "eslint-plugin-no-cstyle-for-loop": "^1.2.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.2",
    "sass": "^1.52.3",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vite-plugin-book": "^0.0.8",
    "vite-plugin-svgr": "^2.1.0",
    "vitest": "^0.15.1"
  }
}
